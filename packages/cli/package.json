{
  "name": "@demoscript/cli",
  "version": "1.0.1",
  "description": "CLI tool for DemoScript - create and present scripted product demonstrations",
  "type": "module",
  "bin": {
    "demoscript": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "demo",
    "presentation",
    "api",
    "cli",
    "documentation"
  ],
  "scripts": {
    "build": "tsc && npm run bundle-ui",
    "bundle": "node esbuild.config.js && npm run bundle-ui",
    "bundle-ui": "cp -r ../ui/dist ./dist/ui-dist && rm -f ./dist/ui-dist/assets/*.map",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "ajv": "^8.17.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.0",
    "commander": "^12.1.0",
    "express": "^4.21.0",
    "js-yaml": "^4.1.0",
    "open": "^10.1.0",
    "vite": "^6.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
